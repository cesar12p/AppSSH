<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App4.Notificaciones">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <!--<Button x:Name="btnCamapana" Text="Ver notificaciones" Clicked="BtnCamapana_Clicked"/> -->
            <ListView x:Name="usuarios">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding Fecha}"/>
                                <Label Text="{Binding Mensaje}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>